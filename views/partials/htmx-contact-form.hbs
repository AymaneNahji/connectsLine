<form class="space-y-6" hx-post="/contact" hx-swap="outerHTML" hx-indicator="#loading-indicator">
    <div>
        <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300" x-text="t('Name')"></label>
        <input type="text" id="name" name="name" value="{{formData.name}}" required minlength="2"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2">
    </div>
    <div>
        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300"
            x-text="t('Email')"></label>
        <input type="email" id="email" name="email" value="{{formData.email}}" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2">
    </div>
    <div>
        <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300"
            x-text="t('Phone')"></label>
        <input type="tel" id="phone" name="phone" value="{{formData.phone}}" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2">
    </div>
    <div>
        <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300"
            x-text="t('Subject')"></label>
        <select id="subject" name="subject" required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2">
            {{!-- activities --}}
            <option value="web-design" x-text="t('Web Design')"></option>
            <option value="e-commerce" x-text="t('E-commerce')"></option>
            <option value="custom-development" x-text="t('Custom Development')"></option>
            <option value="customer-support" x-text="t('Customer Support')"></option>
            <option value="lead-generation" x-text="t('Lead Generation')"></option>
            <option value="outbound-calls" x-text="t('Outbound Calls')"></option>
            {{!-- others --}}
            <option value="demand-job-application" x-text="t('Demand Job Application')"></option>
            <option value="other" x-text="t('Other')"></option>
        </select>
    </div>
    <div>
        <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300"
            x-text="t('Message')"></label>
        <textarea id="message" name="message" rows="4" required minlength="10"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-gray-200 dark:bg-gray-700 dark:border-gray-600 dark:text-white p-2">{{formData.message}}</textarea>
    </div>
    <div>
        {{#if success}}
        <p class="text-green-600" x-text="t('Thank you for your message! We will get back to you soon.')"></p>
        {{/if}}
        {{#if error}}
        <p class="text-red-600">{{error}}</p>
        {{/if}}
    </div>
    <button type="submit"
        class="w-full bg-indigo-600 text-white py-2 px-4 flex items-center justify-center gap-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
        <div id="loading-indicator" class="htmx-indicator">
            <div class="flex justify-center">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-white"></div>
            </div>
        </div>
        <span x-text="t('Send Message')"></span>
    </button>
</form>