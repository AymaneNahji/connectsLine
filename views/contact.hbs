<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <div class="text-center" data-aos="fade-down" data-aos-duration="1000">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8" x-text="t('Contact Us')"></h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-12"
            x-text="t('Get in touch with us to discuss your project or request a quote.')"></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6" data-aos="fade-right" data-aos-duration="1000"
            data-aos-delay="200">
            {{> htmx-contact-form}}
        </div>

        <!-- Contact Information -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6" data-aos="fade-left" data-aos-duration="1000"
            data-aos-delay="400">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4" x-text="t('Contact Information')"></h3>
            <div class="space-y-4">
                <div class="flex items-start gap-3" data-aos="fade-up" data-aos-duration="800" data-aos-delay="600">
                    <svg class="w-6 h-6 text-gray-600 dark:text-gray-400 mt-1" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                        </path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div class="">
                        <p class="text-gray-600 dark:text-gray-300"><a target="_blank"
                                href="https://www.google.com/maps/search/?api=1&query={{companyAddress}}"
                                class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">{{companyAddress}}</a>
                        </p>
                    </div>
                </div>
                <div class="flex items-start gap-3" data-aos="fade-up" data-aos-duration="800" data-aos-delay="800">
                    <svg class="w-6 h-6 text-gray-600 dark:text-gray-400 mt-1" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg>
                    <div class="">
                        <p class="text-gray-600 dark:text-gray-300"><a href="mailto:{{companyEmail}}"
                                class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">{{companyEmail}}</a>
                        </p>
                    </div>
                </div>
                <div class="flex items-start gap-3" data-aos="fade-up" data-aos-duration="800" data-aos-delay="1000">
                    <svg class="w-6 h-6 text-gray-600 dark:text-gray-400 mt-1" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                        </path>
                    </svg>
                    <div class="">
                        <p class="text-gray-600 dark:text-gray-300"><a href="tel:{{companyPhone}}"
                                class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">{{companyPhone}}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>